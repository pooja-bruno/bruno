meta {
  name: setCookies
  type: http
  seq: 4
}

get {
  url: {{host}}/ping
  body: none
  auth: inherit
}

script:post-response {
  const jar = bru.cookies.jar()
  
  await jar.setCookies('https://example.com', [
    {
    key: 'auth',
    value: 'abc123',
    path: '/path',          
    httpOnly: true,
    secure: true,
    expires: new Date(Date.now() + 24 * 60 * 60 * 1000)
    },
    {
    key: 'auth',
    value: 'abc123',
    path: '/foo',          
    httpOnly: true,
    secure: true,
  }
  ]);
  
}

settings {
  encodeUrl: true
}
